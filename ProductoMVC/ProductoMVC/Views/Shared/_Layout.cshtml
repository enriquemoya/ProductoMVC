<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/materialize/css/materialize.css")
</head>
<body>
    <nav>
        <div class="nav-wrapper teal">
            <a href="#" class="brand-logo">Ejemplo MVC</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="~/Productoes/Index">Productos</a></li>
            </ul>
        </div>
    </nav>
        @RenderBody()

    <footer class="page-footer teal">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">Producto</h5>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                © 2016 Enrique Moya
            </div>
        </div>
    </footer>

    @Scripts.Render("~/Scripts/jquery-2.1.1.js")
    @Scripts.Render("~/Scripts/materialize/materialize.js")
    @Scripts.Render("~/Scripts/Productos.js")
    <script type="text/javascript">
        $(document).ready(function (){
            initPage();
        });
    </script>
    @RenderSection("Scripts",false)
</body>
</html>
